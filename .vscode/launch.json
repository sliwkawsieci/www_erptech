{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Hugo Server",
            "type": "node-terminal",
            "request": "launch",
            "command": "..\\hugo_bin\\hugo.exe",
            "args": ["server", "--buildDrafts", "--port", "1313"],
            "cwd": "${workspaceFolder}/hugo_site",
            "presentation": {
                "hidden": false,
                "group": "hugo",
                "order": 1
            }
        },
        {
            "type": "msedge",
            "request": "launch",
            "name": "Launch Edge",
            "url": "http://localhost:1313",
            "webRoot": "${workspaceFolder}/hugo_site",
            "presentation": {
                "hidden": false,
                "group": "hugo",
                "order": 2
            }
        }
    ]
}