    "version": "0.2.0",
    "configurations": [
        {
            "name": "Hugo Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/hugo_bin/hugo.exe",
            "args": ["server", "--buildDrafts", "--port", "8080"],
            "cwd": "${workspaceFolder}/hugo_site",
            "console": "integratedTerminal"
        },
        {
            "type": "msedge",
            "request": "launch",
            "name": "Launch Edge against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/hugo_site"
        }
    ]
} 