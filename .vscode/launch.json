{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Hugo Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/hugo_bin/hugo.exe",
            "args": ["server", "--buildDrafts"],
            "cwd": "${workspaceFolder}/hugo_site",
            "console": "integratedTerminal"
        },
        {
            "type": "msedge",
            "request": "launch",
            "name": "Launch Edge",
            "url": "http://localhost:1313",
            "webRoot": "${workspaceFolder}/hugo_site"
        }
    ]
} 